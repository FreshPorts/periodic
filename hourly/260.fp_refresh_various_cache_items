#!/bin/sh -
#
# FreshPorts periodic script
#
# Checks for any ports which are missing a CATEGORY
# refreshes various otherwise-static files
#

# If there is a global system configuration file, suck it in.
#
logger -t FreshPorts "into $0"
if [ -r /etc/defaults/periodic.conf ]
then
	. /etc/defaults/periodic.conf
	source_periodic_confs
fi

# assign default values
fp_scripts_dir=${fp_scripts_dir:-/usr/local/libexec/freshports}
fp_freshports_user=${fp_freshports_user:-freshports}

case "$fp_refresh_various_cache_items_enable" in
	[Yy][Ee][Ss])
	logger -t FreshPorts into 260.fp_refresh_various_cache_items
	echo "cd $fp_scripts_dir && ./cache-refresh.sh" | su -fm $fp_freshports_user || rc=3
	;;

	*)  rc=0;;
esac

exit $rc
