#!/bin/sh -
#
# FreshPorts periodic script
#
# Any new users?
#

# If there is a global system configuration file, suck it in.
#
logger "into fp_newusers"
if [ -r /etc/defaults/periodic.conf ]
then
    . /etc/defaults/periodic.conf
    source_periodic_confs
fi

logger "into fp_newusers"
case "$fp_newusers_enable" in
	[Yy][Ee][Ss])
	echo ""
	logger "into fp_newusers"
        echo "cd $fp_scripts_dir && ./newusers.sh" | su -fm $fp_freshports_user || rc=3
	;;

    *)  rc=0;;
esac

exit $rc
